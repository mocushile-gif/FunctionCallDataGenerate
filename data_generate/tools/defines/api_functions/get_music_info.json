{
    "name": "get_music_info",
    "description": "Search for music information including tracks, artists, and albums using Last.fm API.",
    "parameters": {
        "type": "object",
        "properties": {
            "query": {
                "type": "string",
                "description": "Search query (artist name, track title, or album name)"
            },
            "search_type": {
                "type": "string",
                "description": "Type of search to perform",
                "enum": ["track", "artist", "album"],
                "default": "track"
            },
            "limit": {
                "type": "integer",
                "description": "Number of results to return (1-50)",
                "default": 5,
                "minimum": 1,
                "maximum": 50
            },
            "output_path": {
                "type": "string",
                "description": "Path to save music information (optional)"
            }
        },
        "required": ["query"]
    }
}