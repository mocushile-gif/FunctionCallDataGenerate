{
    "name": "create_gif",
    "description": "Create a GIF animation from multiple images with customizable duration, loop settings, and optimization options.",
    "parameters": {
      "type": "object",
      "properties": {
        "image_paths": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "List of paths to input images"
        },
        "output_path": {
          "type": "string",
          "description": "Path for the output GIF file"
        },
        "duration": {
          "type": "integer",
          "description": "Duration for each frame in milliseconds",
          "default": 500
        },
        "loop": {
          "type": "integer",
          "description": "Number of loops (0 for infinite)",
          "default": 0
        },
        "optimize": {
          "type": "boolean",
          "description": "Whether to optimize the GIF",
          "default": true
        },
        "resize_to": {
          "type": "array",
          "items": {
            "type": "integer"
          },
          "description": "Resize all images to this size [width, height]"
        },
        "quality": {
          "type": "integer",
          "description": "GIF quality (1-100)",
          "default": 85
        }
      },
      "required": ["image_paths"]
    }
  } 