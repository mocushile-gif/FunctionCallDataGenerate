{
    "name": "apply_style_transfer",
    "description": "Apply various artistic styles to images.",
    "parameters": {
        "type": "object",
        "properties": {
            "input_path": {
                "type": "string",
                "description": "Path to input image file"
            },
            "style_path": {
                "type": "string",
                "description": "Path to style image file (optional for preset styles)"
            },
            "style_type": {
                "type": "string",
                "description": "Style type to apply",
                "enum": ["artistic", "vintage", "sketch", "cartoon", "watercolor"],
                "default": "artistic"
            },
            "output_path": {
                "type": "string",
                "description": "Path for output file (optional, auto-generated if not provided)"
            },
            "intensity": {
                "type": "number",
                "description": "Style transfer intensity (0.0-1.0)",
                "default": 0.5,
                "minimum": 0.0,
                "maximum": 1.0
            },
            "preserve_colors": {
                "type": "boolean",
                "description": "Whether to preserve original colors",
                "default": true
            }
        },
        "required": ["input_path"]
    }
}