{
    "name": "upscale_image",
    "description": "Upscale images to higher resolution using various interpolation methods.",
    "parameters": {
        "type": "object",
        "properties": {
            "input_path": {
                "type": "string",
                "description": "Path to input image file"
            },
            "output_path": {
                "type": "string",
                "description": "Path for output file (optional, auto-generated if not provided)"
            },
            "scale_factor": {
                "type": "number",
                "description": "Scale factor for upscaling (1.0-4.0)",
                "default": 2.0,
                "minimum": 1.0,
                "maximum": 4.0
            },
            "method": {
                "type": "string",
                "description": "Upscaling method",
                "enum": ["lanczos", "bicubic", "bilinear", "nearest"],
                "default": "lanczos"
            },
            "preserve_quality": {
                "type": "boolean",
                "description": "Whether to preserve image quality during upscaling",
                "default": true
            },
            "output_format": {
                "type": "string",
                "description": "Output image format",
                "enum": ["png", "jpg", "tiff"],
                "default": "png"
            }
        },
        "required": ["input_path"]
    }
}