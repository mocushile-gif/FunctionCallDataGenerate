{
    "name": "calculate_gas_properties",
    "description": "Calculates a missing property of an ideal gas using the ideal gas law (PV = nRT).",
    "parameters": {
        "type": "object",
        "properties": {
            "pressure": {
                "type": "number",
                "description": "The pressure of the gas (in atm).",
                "default": null
            },
            "volume": {
                "type": "number",
                "description": "The volume of the gas (in liters).",
                "default": null
            },
            "moles": {
                "type": "number",
                "description": "The number of moles of gas.",
                "default": 1.0
            },
            "temperature": {
                "type": "number",
                "description": "The temperature of the gas (in Kelvin).",
                "default": 273.15
            },
            "gas_constant": {
                "type": "number",
                "description": "The gas constant R (in L·atm/(mol·K)).",
                "default": 0.0821
            }
        },
        "required": [
            "moles",
            "temperature"
        ]
    }
}